# ==============================================================================
# Variables
# ==============================================================================

CFLAGS   += -I$(STM)  -pg -std=c++17 -DDEBUG
CPPFLAGS := $(CFLAGS) 
LDFLAGS  += -L$(STM) -pg
LIBS     += #-ltl2


# ==============================================================================
# Rules
# ==============================================================================

.PHONY: default
default: $(PROG)

.PHONY: clean
clean:
	$(RM) $(OBJS) $(PROG) $(OUTPUT)

$(PROG): $(OBJS)
	$(LD) $(LDFLAGS) $^ $(LIBS) -o $(PROG)

include ../common/Makefile.common


# ==============================================================================
#
# End of Makefile.stm
#
# ==============================================================================
